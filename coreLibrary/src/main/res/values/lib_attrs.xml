<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ViewPager -->
    <declare-styleable name="Lib_Widget_ViewPager">
        <attr name="lib_scrollable" format="boolean" />
        <attr name="lib_autoScroll" format="boolean" />
        <attr name="lib_interval" format="integer" />
        <attr name="lib_parentIsRefresh" format="boolean" />
    </declare-styleable>
    <!--Background-->
    <declare-styleable name="Lib_Widget_TextView">
        <attr name="lib_bottomLeftRadius" format="dimension" />
        <attr name="lib_bottomRightRadius" format="dimension" />
        <attr name="lib_radius" format="dimension" />
        <attr name="lib_topLeftRadius" format="dimension" />
        <attr name="lib_topRightRadius" format="dimension" />
        <attr name="lib_solidColor" format="color" />
        <attr name="lib_solidColor2" format="color" />
        <attr name="lib_strokeColor" format="color" />
        <attr name="lib_strokeColor2" format="color" />
        <attr name="lib_strokeDashWidth" format="dimension" />
        <attr name="lib_strokeDashGap" format="dimension" />
        <attr name="lib_strokeWidth" format="dimension" />
        <attr name="lib_gradientStartColor" format="color" />
        <attr name="lib_gradientStartColor2" format="color" />
        <attr name="lib_gradientCenterColor" format="color" />
        <attr name="lib_gradientCenterColor2" format="color" />
        <attr name="lib_gradientEndColor" format="color" />
        <attr name="lib_gradientEndColor2" format="color" />
        <attr name="lib_orientation">
            <enum name="top_bottom" value="0" />
            <enum name="tr_bl" value="1" />
            <enum name="right_left" value="2" />
            <enum name="br_tl" value="3" />
            <enum name="bottom_top" value="4" />
            <enum name="bl_tr" value="5" />
            <enum name="left_right" value="6" />
            <enum name="tl_br" value="7" />
        </attr>
        <attr name="lib_background2" format="color|reference" />
        <attr name="lib_status">
            <enum name="pressed" value="0" />
            <enum name="enabled" value="1" />
            <enum name="checked" value="2" />
            <enum name="selected" value="3" />
        </attr>
        <attr name="lib_textColor2" format="color" />
    </declare-styleable>
    <!--AbsListView-->
    <declare-styleable name="Lib_AbsListView">
        <attr name="lib_isExpand" format="boolean" />
    </declare-styleable>
    <!--ExpandableLayout-->
    <declare-styleable name="Lib_Widget_ExpandableLayout">
        <attr name="lib_expDuration" format="integer|reference" />
        <attr name="lib_expWithParentScroll" format="boolean" />
        <attr name="lib_expExpandScrollTogether" format="boolean" />
    </declare-styleable>
    <!--LinearLayout-->
    <declare-styleable name="Lib_LinearLayout">
        <attr name="lib_dividerHeight" format="dimension" />
        <attr name="lib_divider" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="Lib_ViewGroup">
        <attr name="lib_isSquare" format="boolean" />
    </declare-styleable>
    <declare-styleable name="Lib_Widget_SwipeMenuLayout">
        <attr name="lib_swipeEnable" format="boolean" />
        <attr name="lib_ios" format="boolean" />
        <attr name="lib_leftSwipe" format="boolean" />
    </declare-styleable>
</resources>